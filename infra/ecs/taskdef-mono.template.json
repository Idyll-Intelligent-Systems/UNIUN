{
  "family": "un1un1TaskDefinition",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "${EXECUTION_ROLE_ARN}",
  "taskRoleArn": "${TASK_ROLE_ARN}",
  "containerDefinitions": [
    {
      "name": "mongo",
      "image": "mongo:7",
      "essential": true,
      "environment": [
        { "name": "MONGO_INITDB_DATABASE", "value": "uniun" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/un1un1/mongo",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "neo4j",
      "image": "neo4j:5",
      "essential": true,
      "environment": [
        { "name": "NEO4J_AUTH", "value": "neo4j/neo4jpassword" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/un1un1/neo4j",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "backend",
      "image": "${ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/un1un1:${BACKEND_TAG}",
      "essential": true,
      "dependsOn": [
        { "containerName": "mongo", "condition": "START" },
        { "containerName": "neo4j", "condition": "START" }
      ],
      "portMappings": [ { "containerPort": 4000, "protocol": "tcp" } ],
      "environment": [
        { "name": "PORT", "value": "4000" },
        { "name": "JWT_SECRET", "value": "${JWT_SECRET}" },
  { "name": "MONGO_URI", "value": "${MONGO_URI}" },
  { "name": "NEO4J_URI", "value": "${NEO4J_URI}" },
  { "name": "NEO4J_USER", "value": "${NEO4J_USER}" },
  { "name": "NEO4J_PASSWORD", "value": "${NEO4J_PASSWORD}" },
        { "name": "GOOGLE_CLIENT_ID", "value": "${GOOGLE_CLIENT_ID}" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/un1un1/backend",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:4000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      }
    },
    {
      "name": "frontend",
      "image": "${ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com/un1un1:${FRONTEND_TAG}",
      "essential": true,
      "portMappings": [ { "containerPort": 3000, "protocol": "tcp" } ],
      "environment": [
        { "name": "NEXT_PUBLIC_API_URL", "value": "" },
        { "name": "NEXT_PUBLIC_GOOGLE_CLIENT_ID", "value": "${NEXT_PUBLIC_GOOGLE_CLIENT_ID}" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/un1un1/frontend",
          "awslogs-region": "${AWS_REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3000/ || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      }
    }
  ],
  "ephemeralStorage": { "sizeInGiB": 40 }
}
